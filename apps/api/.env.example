# Offline Demo Mode Configuration
# Set IMPORT_MODE=local to use local JSON file instead of web scraping
IMPORT_MODE=local

# Path to local products JSON file (relative to repo root or absolute path)
LOCAL_PRODUCTS_FILE=products_filled_generated.json

# Optional: Delay in milliseconds to mimic network latency (default: 400ms)
DEMO_DELAY_MS=400

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/products

# API Configuration
PORT=3001
CORS_ORIGIN=http://localhost:5173

# Translation Provider (stub for offline mode)
TRANSLATION_PROVIDER=stub
GOOGLE_CLOUD_API_KEY=

# Image Provider (stub for offline mode)
IMAGE_PROVIDER=stub
CUSTOM_SEARCH_ENGINE_ID=

# Image Enrichment Configuration
IMAGE_ENRICHMENT_ENABLED=true
IMAGE_DOWNLOAD_DIR=uploads/products
PUBLIC_IMAGE_BASE_URL=/uploads/products
IMAGE_TARGET_COUNT=5
IMAGE_MAX_BYTES=5000000
IMAGE_CONCURRENCY=3
IMAGE_RIGHTS=cc_publicdomain|cc_attribute

# AI Title Cleaning (Gemini API)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
AI_TITLE_CLEANING_ENABLED=true
AI_TITLE_CLEANING_TIMEOUT_MS=6000
AI_TITLE_CLEANING_CACHE_MAX=2000

# AI Translator Concurrency and Retry Settings
AI_TRANSLATOR_CONCURRENCY=2
AI_TRANSLATOR_RETRY_MAX=6
AI_TRANSLATOR_BACKOFF_MIN_MS=500
AI_TRANSLATOR_BACKOFF_MAX_MS=20000
